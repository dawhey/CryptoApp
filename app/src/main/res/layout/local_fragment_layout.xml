<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="fill_parent"
    android:id="@+id/localLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="LOCAL MODULE"
        android:textSize="25dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Key:"
        android:id="@+id/textView"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:textSize="20dp"
        android:textColor="@color/abc_primary_text_material_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="IV:"
        android:id="@+id/textView2"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textSize="20dp"
        android:textColor="@color/abc_primary_text_material_dark" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/keyTextView"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/ivTextView"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/keyTextView"
        android:layout_alignStart="@+id/keyTextView"
        android:gravity="center"
        android:textSize="15dp"
        android:text="No Initialization Vector generated" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypt"
        android:id="@+id/encryptButton"
        android:layout_marginTop="65dp"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt"
        android:id="@+id/decryptButton"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:textColor="@color/abc_primary_text_material_dark"
        android:layout_alignBaseline="@+id/encryptButton"
        android:layout_alignBottom="@+id/encryptButton"
        android:layout_alignRight="@+id/ivTextView"
        android:layout_alignEnd="@+id/ivTextView" />
</RelativeLayout>