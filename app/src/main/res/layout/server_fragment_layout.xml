<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="SERVER MODULE"
        android:textSize="25dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="encrypt on Server"
        android:id="@+id/encryptButton"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decrypt on server"
        android:id="@+id/decryptButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/encryptButton"
        android:layout_alignEnd="@+id/encryptButton" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/decryptButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>